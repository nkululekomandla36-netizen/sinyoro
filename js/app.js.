// Sinyoro App JS
console.log("Sinyoro App loaded");

document.addEventListener('DOMContentLoaded', function() {
    
    // ======= Button Greetings (if these buttons exist) =======
    const welcomeAlertBtn = document.getElementById('welcomeAlertBtn');
    if (welcomeAlertBtn) {
        welcomeAlertBtn.addEventListener('click', () => {
            alert("Welcome to Sinyoro!");
        });
    }

    const consoleTestBtn = document.getElementById('consoleTestBtn');
    if (consoleTestBtn) {
        consoleTestBtn.addEventListener('click', () => {
            console.log("Console test successful ‚úÖ");
        });
    }

    // ======= Tip of the Day (if these elements exist) =======
    const tipContent = document.getElementById('tipContent');
    const tipCategory = document.getElementById('tipCategory');
    const tipDate = document.getElementById('tipDate');
    const refreshTipBtn = document.getElementById('refreshTipBtn');

    const tips = [
        { text: "Always check asset trends before trading.", category: "Trading" },
        { text: "Start small, grow your portfolio gradually.", category: "Portfolio" },
        { text: "Diversify your investments to reduce risk.", category: "Trading" },
        { text: "Use alerts to stay updated on market changes.", category: "Alerts" },
    ];

    function loadRandomTip() {
        if (tipContent && tipCategory && tipDate) {
            const tip = tips[Math.floor(Math.random() * tips.length)];
            tipContent.textContent = tip.text;
            tipCategory.textContent = tip.category;
            tipDate.textContent = new Date().toLocaleDateString();
        }
    }

    if (refreshTipBtn) {
        refreshTipBtn.addEventListener('click', loadRandomTip);
    }

    // Load a tip on page load (if elements exist)
    loadRandomTip();

    // ======= Main App Buttons (from your HTML) =======
    
    // Sign In Button
    const signInBtn = document.getElementById('signInBtn');
    if (signInBtn) {
        signInBtn.addEventListener('click', function() {
            showToast('Sign In - Coming Soon! üöÄ');
        });
    }

    // Sign Up Button
    const signUpBtn = document.getElementById('signUpBtn');
    if (signUpBtn) {
        signUpBtn.addEventListener('click', function() {
            showToast('Sign Up - Coming Soon! üéâ');
        });
    }

    // Get Started Button
    const getStartedBtn = document.getElementById('getStartedBtn');
    if (getStartedBtn) {
        getStartedBtn.addEventListener('click', function() {
            showToast('Welcome to Sinyoro! Let\'s get started! üöÄ');
            document.getElementById('portfolio').scrollIntoView({ behavior: 'smooth' });
        });
    }

    // Trade Now Buttons
    const tradeBtns = document.querySelectorAll('.trade-btn');
    tradeBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const card = this.closest('.trading-card');
            const title = card.querySelector('h3').textContent;
            showToast(`Starting ${title}... üí∞`);
        });
    });

    // Smooth scroll for nav links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
            e.preventDefault();
            const target = document.querySelector(this.getAttribute('href'));
            if (target) {
                target.scrollIntoView({ behavior: 'smooth' });
            }
        });
    });

    // ======= Toast Notification Function =======
    function showToast(message) {
        const existingToast = document.querySelector('.toast');
        if (existingToast) {
            existingToast.remove();
        }

        const toast = document.createElement('div');
        toast.className = 'toast';
        toast.innerHTML = `
            <div class="toast-icon">‚ÑπÔ∏è</div>
            <div class="toast-content">
                <h4>Notification</h4>
                <p>${message}</p>
            </div>
        `;

        toast.style.cssText = `
            position: fixed;
            bottom: 2rem;
            right: 2rem;
            background: rgba(30, 41, 59, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem 2rem;
            border-radius: 16px;
            display: flex;
            align-items: center;
            gap: 1rem;
            z-index: 9999;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
            transform: translateX(400px);
            opacity: 0;
            transition: all 0.4s ease;
            color: white;
        `;

        document.body.appendChild(toast);

        setTimeout(() => {
            toast.style.transform = 'translateX(0)';
            toast.style.opacity = '1';
        }, 100);

        setTimeout(() => {
            toast.style.transform = 'translateX(400px)';
            toast.style.opacity = '0';
            setTimeout(() => toast.remove(), 400);
        }, 3000);
    }

    console.log('Sinyoro App Loaded Successfully! üöÄ');
});
